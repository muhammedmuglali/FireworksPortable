//==================================================================// WP7 Inline Progress// Timur Prokopiev 2011//==================================================================function setDefaultValues() {  var values = new Array();  // Color Theme  values.push({ name:"Theme", type:"ComboBox", value:"Dark,Dark,Light"});// Accent Color  values.push({ name:"Accent Color", type:"ComboBox", value:"Orange,Magenta,Purple,Teal,Lime,Brown,Pink,Orange,Blue,Red,Green"});// Text  values.push({ name:"Text", type:"text", value:"paused" });Widget.elem.customData["currentValues"] = values;}function applyCurrentValues() {  var values = Widget.elem.customData["currentValues"];   var theme  = values[0].value.split(",")[0].toString();  var color  = values[1].value.split(",")[0].toString();    var magenta = "#FF0097";  var purple = "#A200FF";  var teal = "#00ABA9";  var lime = "#8CBF26";  var brown = "#996600";  var pink = "#E671B8";  var orange = "#F09609";  var blue = "#1BA1E2";  var red = "#E51400";  var green = "#339933";  Widget.GetObjectByName("text").textChars = values[2].value;		if (theme == "Dark") {		Widget.GetObjectByName("text").pathAttributes.fillColor = "#CBCBCB";		}			if (theme == "Light") {		Widget.GetObjectByName("text").pathAttributes.fillColor = "#AAAAAA";		}		if (color == "Magenta") {		Widget.GetObjectByName("progress").pathAttributes.fillColor = magenta;		Widget.GetObjectByName("bg").pathAttributes.fillColor = magenta;		}		if (color == "Purple") {		Widget.GetObjectByName("progress").pathAttributes.fillColor = purple;		Widget.GetObjectByName("bg").pathAttributes.fillColor = purple;		}		if (color == "Teal") {		Widget.GetObjectByName("progress").pathAttributes.fillColor = teal;		Widget.GetObjectByName("bg").pathAttributes.fillColor = teal;		}		if (color == "Lime") {		Widget.GetObjectByName("progress").pathAttributes.fillColor = lime;		Widget.GetObjectByName("bg").pathAttributes.fillColor = lime;		}				if (color == "Brown") {		Widget.GetObjectByName("progress").pathAttributes.fillColor = brown;		Widget.GetObjectByName("bg").pathAttributes.fillColor = brown;		}		if (color == "Pink") {		Widget.GetObjectByName("progress").pathAttributes.fillColor = pink;		Widget.GetObjectByName("bg").pathAttributes.fillColor = pink;		}		if (color == "Orange") {		Widget.GetObjectByName("progress").pathAttributes.fillColor = orange;		Widget.GetObjectByName("bg").pathAttributes.fillColor = orange;		}		if (color == "Blue") {		Widget.GetObjectByName("progress").pathAttributes.fillColor = blue;		Widget.GetObjectByName("bg").pathAttributes.fillColor = blue;		}		if (color == "Red") {		Widget.GetObjectByName("progress").pathAttributes.fillColor = red;		Widget.GetObjectByName("bg").pathAttributes.fillColor = red;		}		if (color == "Green") {		Widget.GetObjectByName("progress").pathAttributes.fillColor = green;		Widget.GetObjectByName("bg").pathAttributes.fillColor = green;		}}switch (Widget.opCode){	case 1: setDefaultValues();   break;	case 2: applyCurrentValues(); break;}
//==================================================================// WP7 Back&Forward Icon// Timur Prokopiev 2011//==================================================================function setDefaultValues() {  var values = new Array();  // Icon State  values.push({ name:"State", type:"ComboBox", value:"Forward,Forward,Back" });// Theme  values.push({ name:"Theme", type:"ComboBox", value:"Dark,Dark,Light" });// Enable Colorize  values.push({ name:"Colorize", type:"Boolean",  value:"false" });// Pagination Color  values.push({ name:"Color", type:"color", value:"#0000FF" });Widget.elem.customData["currentValues"] = values;}function applyCurrentValues() {  var values = Widget.elem.customData["currentValues"];  var state  = values[0].value.split(",")[0].toString();  var theme  = values[1].value.split(",")[0].toString();  var enabled = (values[2].value.toString()=="false");  var color  = values[3].value.split(",")[0].toString();		if (state == "Forward") {  		Widget.GetObjectByName("forward").visible = "true";		Widget.GetObjectByName("back").visible = "false";		}		if (state == "Back") {  		Widget.GetObjectByName("forward").visible = "false";		Widget.GetObjectByName("back").visible = "true";		}		if (values[2].value.toString() == "true") {		Widget.GetObjectByName("forward").pathAttributes.fillColor = values[3].value;		Widget.GetObjectByName("back").pathAttributes.fillColor = values[3].value;	} else {		if (theme == "Dark") {		Widget.GetObjectByName("forward").pathAttributes.fillColor = "#FFFFFF";		Widget.GetObjectByName("back").pathAttributes.fillColor = "#FFFFFF";		}			if (theme == "Light") {		Widget.GetObjectByName("forward").pathAttributes.fillColor = "#000000";		Widget.GetObjectByName("back").pathAttributes.fillColor = "#000000";		}	} 		}switch (Widget.opCode){	case 1: setDefaultValues();   break;	case 2: applyCurrentValues(); break;}
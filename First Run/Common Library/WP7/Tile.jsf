ibutes.fillColor = brown;		}		if (color == "Pink") {		Widget.GetObjectByName("Bubble").pathAttributes.fillColor = pink;		}		if (color == "Orange") {		Widget.GetObjectByName("Bubble").pathAttributes.fillColor = orange;		}		if (color == "Blue") {		Widget.GetObjectByName("Bubble").pathAttributes.fillColor = blue;		}		if (color == "Red") {		Widget.GetObjectByName("Bubble").pathAttributes.fillColor = red;		}		if (color == "Green") {		Widget.GetObjectByName("Bubble").pathAttributes.fillColor = green;		}		}switch (Widget.opCode){	case 1: setDefaultValues();   break;	case 2: applyCurrentValues(); break;}